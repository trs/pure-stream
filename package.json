{
  "name": "pure-stream",
  "version": "1.3.0",
  "description": "Collection of functional utilities for working with object streams",
  "main": "dist/index",
  "files": [
    "dist/"
  ],
  "scripts": {
    "test:once": "jest",
    "test": "npm run test:once -- --watchAll",
    "build": "tsc"
  },
  "keywords": [
    "easy",
    "simple",
    "logical",
    "stream",
    "functional",
    "chunk",
    "filter",
    "from",
    "map",
    "reduce",
    "transform",
    "passthrough"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/autovance/pure-stream.git"
  },
  "author": "Tyler Stewart",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(\\.|/)spec\\.ts",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "prettier": "@autovance/eslint-config-autovance/prettier",
  "eslintConfig": {
    "extends": [
      "@autovance/eslint-config-autovance"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "jest": true
    },
    "rules": {
      "jest/no-focused-tests": "error"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branch": "master"
  },
  "devDependencies": {
    "@autovance/eslint-config-autovance": "^1.3.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/jest": "^24.0.6",
    "@types/node": "^12.0.4",
    "eslint": "^5.14.1",
    "eslint-plugin-jest": "^22.7.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.18.2",
    "semantic-release": "^17.2.3",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3"
  }
}
